    header{display:flex;gap:16px;align-items:center;padding:18px 22px;border-bottom:1px solid rgba(0,0,0,0.06);background:transparent}
    .logo{width:84px;height:84px;flex:0 0 84px;border-radius:12px;overflow:hidden;background:#fff;display:flex;align-items:center;justify-content:center}
